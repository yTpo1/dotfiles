# -------------------------------------------------------------------
# Password generation
# generate password and copy to clipboard
# $1 is the length of password
pass-gen() {
	local PASS_LEN=$1 ;
	#local PASS_GEN=$(openssl rand -base64 $PASS_LEN) ;
	local PASS_GEN=$(pwgen -y -1 $PASS_LEN) ;
	echo $PASS_GEN ;
	echo Copied to clipboard ;
	printf $PASS_GEN | xclip -selection c
	}

